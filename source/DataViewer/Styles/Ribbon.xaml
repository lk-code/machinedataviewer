<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type Ribbon}">
        <Setter Property="Margin" Value="0,-22,0,0"/>
    </Style>

    <Style x:Key="FocusedRibbonTabHeaderRedStyle" TargetType="RibbonTabHeader">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                    <GradientStop Color="#99ff0000" Offset="0"/>
                    <GradientStop Color="#33ff0000" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

