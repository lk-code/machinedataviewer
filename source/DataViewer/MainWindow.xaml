<adonisControls:AdonisWindow x:Class="DataViewer.MainWindow"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:vm="clr-namespace:DataViewer.ViewModels"
                             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
                             xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                             xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
                             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                             xmlns:fa5="http://schemas.fontawesome.com/icons/"
                             xmlns:local="clr-namespace:DataViewer"
                             d:DataContext="{d:DesignInstance vm:MainViewModel, IsDesignTimeCreatable=True}"
                             mc:Ignorable="d"
                             Title="{Binding Title, Mode=OneWay}"
                             Height="450" Width="800"
                             Background="{StaticResource BackgroundColorBrush}"
                             TitleBarBackground="{StaticResource TitleBarBackgroundBrush}"
                             TitleBarForeground="{StaticResource ForegroundColorBrush}"
                             AllowDrop="True"
                             DragEnter="MainWindow_DragEnter"
                             DragLeave="MainWindow_DragLeave"
                             Drop="MainWindow_Drop">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="24" />
        </Grid.RowDefinitions>

        <Grid Visibility="{Binding IsDragDropUIVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="999"
              Grid.Row="0"
              Grid.RowSpan="2">
            <Border Background="{StaticResource BackgroundColorBrush}"
                    Padding="40">
                <fa5:SvgAwesome Icon="Solid_ArrowAltCircleDown"
                                Foreground="{StaticResource BackgroundContrastColorBrush}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center" />
            </Border>
        </Grid>

        <StackPanel Orientation="Vertical"
                    Margin="20">

            <Button Content="Click Me!" />
        </StackPanel>

        <StatusBar Grid.Row="1">
            <StatusBarItem Content="{Binding LoadedFilePath, Mode=OneWay}" />
        </StatusBar>

    </Grid>

</adonisControls:AdonisWindow>
